@page
@model ProductsProjectCRUD.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Products Catalog";
}

<!-- Page Header -->
<div class="mb-8">
    <h1 class="text-4xl font-bold text-primary mb-2">Product Catalog</h1>
    <p class="text-gray-700">Manage and browse all available products</p>
</div>

<!-- Search and Create Section -->
<div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
    <!-- Search Form -->
    <form method="get" class="md:col-span-2">
        <div class="relative">
            <input 
                type="text" 
                name="SearchTerm" 
                value="@Model.SearchTerm" 
                placeholder="Search products by name..." 
                class="input input-bordered w-full pl-10 pr-4 bg-base-100 text-base-content"
                aria-label="Search products"
            />
            <svg class="absolute left-3 top-3 w-5 h-5 text-base-content/50" fill="currentColor" viewBox="0 0 24 24">
                <path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
            <button 
                type="submit" 
                class="absolute right-2 top-2 btn btn-sm btn-ghost"
                aria-label="Search"
            >
                Go
            </button>
        </div>
    </form>

    <!-- Create Button -->
    <div class="flex justify-end">
        <a asp-page="./Create" class="btn bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br text-white shadow-lg shadow-blue-500/50 border-0">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path d="M12 4v16m8-8H4"></path>
            </svg>
            Create Product
        </a>
    </div>
</div>

<!-- Products Table -->
<div class="overflow-x-auto bg-base-100 rounded-lg border border-base-300 shadow-lg">
    <table class="w-full table table-zebra">
        <!-- Table Caption -->
        <caption class="sr-only">List of all products with their details and actions</caption>
        
        <!-- Table Head -->
        <thead class="bg-neutral border-b border-base-300">
            <tr>
                <th class="px-6 py-4 text-left text-sm font-semibold text-white">
                    <span class="cursor-pointer hover:text-primary transition-colors">Product Name</span>
                </th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-white">
                    <span class="cursor-pointer hover:text-primary transition-colors">Category</span>
                </th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-white">
                    <span class="cursor-pointer hover:text-primary transition-colors">Supplier</span>
                </th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-white">
                    <span class="cursor-pointer hover:text-primary transition-colors">Unit Price</span>
                </th>
                <th class="px-6 py-4 text-left text-sm font-semibold text-white">
                    <span class="cursor-pointer hover:text-primary transition-colors">In Stock</span>
                </th>
                <th class="px-6 py-4 text-center text-sm font-semibold text-white">Actions</th>
            </tr>
        </thead>

        <!-- Table Body -->
        <tbody class="divide-y divide-base-300">
            @if (Model.Products != null && Model.Products.Any())
            {
                @foreach (var item in Model.Products)
                {
                    <tr class="hover:bg-neutral transition-colors">
                        <td class="px-6 py-4 text-sm font-medium text-base-content">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            <span class="badge badge-lg badge-primary">@Html.DisplayFor(modelItem => item.CategoryName)</span>
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            @Html.DisplayFor(modelItem => item.SupplierName)
                        </td>
                        <td class="px-6 py-4 text-sm font-semibold text-base-content">
                            $@Html.DisplayFor(modelItem => item.UnitPrice)
                        </td>
                        <td class="px-6 py-4 text-sm text-gray-700">
                            @{
                                var stock = item.UnitsInStock;
                                var badgeClass = stock > 10 ? "badge-success" : stock > 0 ? "badge-warning" : "badge-error";
                            }
                            <span class="badge @badgeClass">@stock units</span>
                        </td>
                        <td class="px-6 py-4 text-center text-sm font-medium">
                            <div class="flex items-center justify-center gap-2">
                                <!-- Edit Button -->
                                <a asp-page="./Edit" asp-route-id="@item.ProductID" class="btn btn-sm bg-gradient-to-r from-yellow-400 via-yellow-500 to-yellow-600 hover:bg-gradient-to-br text-white shadow-lg shadow-yellow-500/50 border-0">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                    </svg>
                                </a>

                                <!-- Details Button -->
                                <a asp-page="./Details" asp-route-id="@item.ProductID" class="btn btn-sm btn-info text-white border-0">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                </a>

                                <!-- Delete Button -->
                                <a asp-page="./Delete" asp-route-id="@item.ProductID" class="btn btn-sm bg-gradient-to-r from-red-400 via-red-500 to-red-600 hover:bg-gradient-to-br text-white shadow-lg shadow-red-500/50 border-0">
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                    </svg>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="6" class="px-6 py-8 text-center">
                        <div class="flex flex-col items-center justify-center">
                            <svg class="w-12 h-12 text-gray-700 mb-4" fill="currentColor" viewBox="0 0 24 24">
                                <path d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"></path>
                            </svg>
                            <p class="text-gray-800 text-sm">No products found. <a asp-page="./Create" class="link link-primary">Create one now</a></p>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Pagination Info -->
@if (Model.Products != null && Model.Products.Any())
{
    <div class="mt-6 flex items-center justify-between">
        <div class="text-sm text-gray-700">
            Showing <span class="font-semibold text-gray-700">@Model.Products.Count</span> products
        </div>

        <!-- Pagination Controls (Optional - Can be enhanced with actual pagination) -->
        <div class="flex gap-2">
            <button class="btn btn-sm btn-outline" disabled aria-label="Previous page">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M15 19l-7-7 7-7"></path>
                </svg>
                Previous
            </button>
            <button class="btn btn-sm btn-outline" aria-label="Next page">
                Next
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M9 5l7 7-7 7"></path>
                </svg>
            </button>
        </div>
    </div>
}

<!-- Table Summary and Instructions -->
<div class="mt-8 p-4 bg-base-200 rounded-lg border border-base-300">
    <h3 class="font-semibold text-gray-900 mb-2">Table Features:</h3>
    <ul class="text-sm text-gray-900 space-y-1">
        <li>✓ Use the search box to filter products by name</li>
        <li>✓ Click column headers to sort (sortable columns)</li>
        <li>✓ Hover over rows to see hover effects</li>
        <li>✓ Use action buttons to edit, view details, or delete products</li>
        <li>✓ Stock level is color-coded: Green (>10), Yellow (1-10), Red (0)</li>
    </ul>
</div>